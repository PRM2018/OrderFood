<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EditFoodInfoActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="33dp"
        android:background="@color/button"
        android:onClick="DeleteFood"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_cancel"
        app:layout_constraintStart_toEndOf="@+id/bt_edit" />

    <Button
        android:id="@+id/bt_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@color/button"
        android:onClick="EditFood"
        android:text="Save"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_delete"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_food_des"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="115dp"
        android:layout_marginEnd="1dp"
        android:background="@color/editText"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bt_edit"
        app:layout_constraintEnd_toEndOf="@+id/et_food_name"
        app:layout_constraintStart_toStartOf="@+id/et_food_quantity"
        app:layout_constraintTop_toBottomOf="@+id/et_food_img" />

    <EditText
        android:id="@+id/et_food_quantity"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="16dp"
        android:background="@color/editText"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_food_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_food_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="16dp"
        android:background="@color/editText"
        android:ems="10"
        android:hint="Img"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_food_des"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_food_quantity"
        app:layout_constraintTop_toBottomOf="@+id/et_food_price" />

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="33dp"
        android:onClick="cancel"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_delete"
        app:layout_constraintTop_toBottomOf="@+id/bt_edit"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/et_food_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="16dp"
        android:background="@color/editText"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_food_price"
        app:layout_constraintEnd_toStartOf="@+id/et_food_price"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_food_price"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="16dp"
        android:background="@color/editText"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_food_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_food_name"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:layout_marginTop="16dp"
        android:text="Edit Food"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/et_food_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>